<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_bj"
    android:orientation="vertical">


    <include layout="@layout/title_layout"></include>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <RadioGroup
            android:id="@+id/rg_diagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_d1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="最近60分"
                android:textSize="@dimen/text_size26px"
                android:textColor="@drawable/selector_text_bs"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/selector_left"
                android:checked="true"
                />


            <RadioButton
                android:id="@+id/rb_d2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="最近60秒"
                android:textSize="@dimen/text_size26px"
                android:textColor="@drawable/selector_text_bs"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/selector_right"
                />


        </RadioGroup>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_bj"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



                <WebView
                    android:id="@+id/wv_view"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@mipmap/bg_bj"
                    ></WebView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/rq"/>

                    <TextView
                        android:id="@+id/tv_rq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09-10"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/text_size24px"
                        android:textColor="#a8a8a8"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/sj"/>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18:33:00"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/text_size24px"
                        android:textColor="#a8a8a8"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/data"/>

                    <TextView
                        android:id="@+id/tv_lv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.1678%"
                        android:textSize="@dimen/text_size24px"
                        android:layout_marginLeft="10dp"
                        android:textColor="#a8a8a8"/>
                </LinearLayout>
            </LinearLayout>






            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="#888888"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_pdimg"
                    android:layout_width="140dp"
                    android:layout_height="90dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_time_sj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18:06"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size26px"/>

                    <TextView
                        android:id="@+id/tv_pd_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="湖南卫视"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/text_size30px"/>

                    <TextView
                        android:id="@+id/tv_jm_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="明星运动会"
                        android:textColor="@color/text_ys"
                        android:layout_marginBottom="5dp"
                        android:textSize="@dimen/text_size26px"/>
                    <TextView
                        android:id="@+id/tv_jm_lv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.154%"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size26px"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>




</LinearLayout>

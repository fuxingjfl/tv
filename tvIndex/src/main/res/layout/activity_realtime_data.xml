<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_layout"></include>

    <!--<MyScrollView
        android:id="@+id/sv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >-->

        <!--<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_tab"
            android:layout_width="match_parent"
            android:background="@color/time_bg"
            android:layout_height="80dp">

            <RadioGroup
                android:id="@+id/rg_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_f1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="全部"
                    android:textSize="@dimen/text_size26px"
                    android:textColor="@drawable/selector_text_bs"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:button="@null"
                    android:background="@drawable/selector_left"
                    android:checked="true"
                    />

                <RadioButton
                    android:id="@+id/rb_f2"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="卫视"
                    android:textSize="@dimen/text_size26px"
                    android:textColor="@drawable/selector_text_bs"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:button="@null"
                    android:background="@drawable/selector_zj"
                    />

                <RadioButton
                    android:id="@+id/rb_f3"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="央视"
                    android:textSize="@dimen/text_size26px"
                    android:textColor="@drawable/selector_text_bs"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:button="@null"
                    android:background="@drawable/selector_right"
                    />


            </RadioGroup>

        </RelativeLayout>



        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:background="@mipmap/bg_bj"
            android:layout_height="match_parent"
            ></FrameLayout>

    </LinearLayout>






        <!--</RelativeLayout>-->

    <!--</MyScrollView>-->


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55475c"
    >

    <ImageView
        android:id="@+id/id_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/guide_three_page_top"
        android:src="@mipmap/guide03"/>

    <Button
        android:id="@+id/id_enterBtn"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:text="@string/enter"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/enter_selector"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="@dimen/guide_three_btn_top"
        android:layout_below="@id/id_guide"/>
</RelativeLayout>